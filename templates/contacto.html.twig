{% extends "base.html.twig" %}
{% block title %}Contacto{% endblock %}
{% block css %}{% endblock %}
{% block bodyclass %}<body class="home">{% endblock %}
{% block headerclass %}  <header id="contacto" class="container">{% endblock %}
{% block content %}
<div class="row">
	<section class="col-md-10 col-md-offset-1">
		<div class = "row">
			<div class = "col-xs-12 text-center">
				<h1 class = "title montserrat color3">{{page.titulo}}</h1>
				<p class = "title-caption text-center mancha-texto color4">
					Envíanos un mensaje o llámanos y resolveremos tus dudas. ¡Estamos para servirte!
				</p>
			</div>
		</div>   
	</section>
</div>
<div class = "row section-list-contacto">
	<section class ="col-md-10 col-md-offset-1">
		<div class = "row">
			<div class = "col-md-6 contacto-derecha">
				<div class = "row">
					<div class = "col-md-10 col-md-offset-1">
						<form role="form" id="form">
						  <div class="form-group">
						    <label class="col-md-2" for="form-nombre">{{page.nombre}}</label>
						    <div class="col-md-10">
						    	<input type="text"required name="nombre" class="form-control without-borders" id="form-nombre">
						    </div>
						  </div>
						  <div class="form-group">
						    <label class="col-md-2" for="form-email">{{page.mail}}</label>
						    <div class="col-md-10">
						    	<input type="email" required name="email" class="form-control without-borders" id="form-email" >
						    </div>
						  </div>
						  <div class="form-group">
						    <label class="col-md-2" for="form-tel">{{page.tel}}</label>
						    <div class="col-md-10">
						    	<input type="text" required name="telefono" class="form-control without-borders" id="form-tel">
						    </div>
						  </div>
						  <div class="form-group">
						    <label class="col-md-2" for="form-asunto">{{page.asunto}}</label>
						    <div class="col-md-10">
						    	<input type="text" required name="asunto" class="form-control without-borders" id="form-asunto">
						    </div>
						  </div>
						  <div class="form-group">
						    <label class="col-md-2" for="form-mensaje">{{page.mensaje}}</label>
						    <div class="col-md-10">
						    	<textarea name="mensaje" class="form-control without-borders" id="form-mensaje" rows="3"></textarea>
						    </div>
						  </div>
						  
						  <button type="submit" class="btn-enviar background4 "><span class=" montserrat">{{page.enviar}}</span> <span class="icon-circle-right vertical-aling"></span></button>

						  <span id="response"></span>

						</form>
					</div>
				</div>	
			</div>
			<div class = "col-md-6 ">
				<div class = "row">
					<div class = "col-md-10 col-md-offset-1 ">
						{{page.texto|raw}}
						<p class="color1"><span class="share-mail icon-mail px20 color1 vertical-align"></span> <span class="montserrat bold">info@senderosmayakoba.mx</span></p>
						<p class="color1"><span class="facebook icon-facebook px20 color1 vertical-align"></span> <span class="montserrat bold"> /SenderosMayakoba</span></p>
						<p class="color1"><span class="twitter icon-twitter px20 color1 vertical-align"></span> <span class="montserrat bold">SenderosMayakoba</span></p>
						<p class="color1 px13 open-sans weight-100">&#169; SENDEROS MAYAKOBA &#174; 2014</p>
						
					</div>
				</div>	
			</div>
		</div>
	</section>
</div>
<div class = "row thumnails-img">
	<section class = "col-md-10 col-md-offset-1">
		<div class = "row">
			<div clas="col-md-12-" id="mapa"></div>
			<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
		    <script>
		      function dos() {
		        var myLatlng = new google.maps.LatLng(20.673967, -87.049499);
		        var mapOptions = {
		          center: myLatlng,
		          zoom: 13,
		          mapTypeId: google.maps.MapTypeId.ROADMAP
		        };
		        var map = new google.maps.Map(document.getElementById("mapa"),
		            mapOptions);
		       var marker = new google.maps.Marker({
			      position: myLatlng,
			      map: map,
			      title: 'Mayakoba',
			      icon: 'web/image/Contacto/pin.png'
		  		});
		 
		      };

		      google.maps.event.addDomListener(window, 'load', dos);
		        
		    </script>   
		</div>
	</section>
</div>
{% endblock %}

	